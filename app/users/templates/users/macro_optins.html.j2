{% macro opt_in(tags, opt_in_form) %}
<form id="optinform" method="POST" action="{{ url_for('users.update_profile') }}">
  {{ opt_in_form.hidden_tag() }}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>SMS</th>
        <th>Epost</th>
        <th>Beskrivning</th>
      </tr>
    </thead>
    <tbody>
      {% for tag in tags %}
      <tr>
        <td class="text-center align-middle">
        {% if tag.allow_sms == true %}
          <div class="form-check form-switch">
            {{ opt_in_form['tag_sms_' ~ tag.id|string](class="form-check-input", type="checkbox", id="flexSwitchCheckDefault") }}
          </div>
        {% endif %}
        </td>
        <td class="text-center align-middle">
        {% if tag.allow_email == true %}
          <div class="form-check form-switch">
          {{ opt_in_form['tag_email_' ~ tag.id|string](class="form-check-input", type="checkbox", id="flexSwitchCheckDefault") }}
          </div>
        {% endif %}
        </td>
        <td class="w-100">{{ tag.description }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  {{ opt_in_form.submit(class='form-control w-25 btn btn-primary', id="optinform") }}
</form>

{% endmacro %}