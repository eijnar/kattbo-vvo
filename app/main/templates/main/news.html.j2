{% extends "layout.html.j2" %}
{% block content %}
<div class="vh-100">
<iframe src="{{ url_for('map.mapview') }}" style="width: 100%; height: 100%; overflow: hidden; border: none;"></iframe>
<div class="row">
    <div class="col">
        {% for post in posts.items %}
        <article class="blog-post bg-light shadow p-3">
            <h2 class="blog-post-title">{{ post.title }}</h2>
            <p class="blog-post-meta">{{ post.author.first_name }} {{ post.author.last_name }} {{ format_date(post.created_at, format='dd MMMM YYYY') }}</p>
            {{ post.content }}
        </article>
        {% endfor %}
    </div>
    <div class="col-lg-3 bg-secondary">
    MENY
    </div>
</div>
</div>


{% endblock %}