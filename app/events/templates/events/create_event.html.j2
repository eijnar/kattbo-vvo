{% extends "layout.html.j2" %}

{% block content %}
  <h1>Create Event</h1>
  <form method="POST" action="">
    {{ event_form.hidden_tag() }}
    <div>
      {{ event_form.description.label }}<br>
      {{ event_form.description }}
      {% if event_form.description.errors %}
        <div class="errors">{{ event_form.description.errors[0] }}</div>
      {% endif %}
    </div>
    <div>
      {{ event_form.tag_category.label }}<br>
      {{ event_form.tag_category }}
      {% if event_form.tag_category.errors %}
        <div class="errors">{{ event_form.tag_category.errors[0] }}</div>
      {% endif %}
    </div>
    <div>
      {{ event_form.dates.label }}<br>
      {{ event_form.dates }}
      {% if event_form.dates.errors %}
        <div class="errors">{{ event_form.dates.errors[0] }}</div>
      {% endif %}
    </div>
    <div>
      {{ event_form.submit }}
    </div>
  </form>
{% endblock %}